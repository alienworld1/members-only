extends layout 

block content 
  main(class='p-4 rounded-lg shadow-lg w-96 mx-auto mt-8') 
    h1(class='text-center text-2xl')= title
    form(action="POST")
      section(class='flex flex-col items-center')
        div(class='flex flex-col items-center')
          label(for='first_name') First name: 
          input(type="text" name="first_name" id="first_name" required class='block w-full p-2 mb-4') 
          label(for='last_name') Last name: 
          input(type="text" name="last_name" id="last_name" required class='block w-full p-2 mb-4') 
          label(for='username') Email: 
          input(type="username" name="username" id="username" required class='block w-full p-2 mb-4') 
          label(for='password') Password: 
          input(type="password" name="password" id="password" required class='block w-full p-2 mb-4') 
          label(for='confirm_password') Confirm password: 
          input(type="password" name="confirm_password" id="confirm_password" required class='block w-full p-2 mb-4') 
          button(type='submit' class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded') Sign up
          a(href='/login' class='text-blue-500 hover:text-blue-700') Log in