extends layout 

block content 
  main(class='p-4 rounded-lg shadow-lg w-1/3 mx-auto mt-8 bg-slate-100') 
    h1(class='text-center text-2xl mb-4')= title
    form(method="POST")
      section(class='flex flex-col items-center')
        div(class='flex flex-col items-center')
          label(for='first_name') First name: 
          input(type="text" name="first_name" id="first_name" value=(user===undefined? '' : user.firstName) required class='block w-full p-2 border-solid border-zinc-950 caret-zinc-950 bg-inherit text-zinc-950 border-2 rounded-md outline-none mb-4') 
          label(for='last_name') Last name: 
          input(type="text" name="last_name" id="last_name" value=(user===undefined? '': user.lastName) required class='block w-full p-2 border-solid border-zinc-950 caret-zinc-950 bg-inherit text-zinc-950 border-2 rounded-md outline-none mb-4') 
          label(for='username') Username: 
          input(type="username" name="username" id="username" value=(user===undefined? '' : user.username) required class='block w-full p-2 border-solid border-zinc-950 caret-zinc-950 bg-inherit text-zinc-950 border-2 rounded-md outline-none mb-4') 
          label(for='password') Password: 
          input(type="password" name="password" id="password" value=(user===undefined? '' : user.password) required class='block w-full p-2 border-solid border-zinc-950 caret-zinc-950 bg-inherit text-zinc-950 border-2 rounded-md outline-none mb-4') 
          label(for='confirm_password') Confirm password: 
          input(type="password" name="confirm_password" id="confirm_password" required class='block w-full p-2 border-solid border-zinc-950 caret-zinc-950 bg-inherit text-zinc-950 border-2 rounded-md outline-none mb-4') 
          button(type='submit' class='bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded') Sign up
          a(href='/log-in' class='text-purple-500 hover:text-purple-700') Log in
    if errors 
      hr(class='my-4')
      ul(class='text-red-500')
        each error in errors 
          li= error.msg    